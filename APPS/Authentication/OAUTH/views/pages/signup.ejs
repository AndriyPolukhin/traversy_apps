<!--from /views/signup-->
<h1><span class="fas fa-sign-in"> Signup</span></h1>
<% if(errMsg) {%>
<p class="errMsg">
  <%- errMsg%>
</p>
<%}%>
<h3>Singup with your username, email and password!</h3>
<form action="/signup" method="post">
  <input type="text" name="username" placeholder="username" required>
  <input type="email" name="email" placeholder="emali" required>
  <input type="password" name="password" placeholder="password" required>
  <input type="submit" class="btn btn-success" value="Signup">
</form>
<div>
  <h3>Signup with social networks</h3>
  <a href="/auth/twitter" class="btn btn-primary btn-default">
    <span class="fab fa-twitter"></span> Twitter
  </a>
  <a href="/auth/facebook">
    <span class="fab fa-facebook"></span> Facebook
  </a>
</div>
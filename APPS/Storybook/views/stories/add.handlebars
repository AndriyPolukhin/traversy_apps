<h1>Add Stories</h1>
<div class="row">
  <form action="/stories" method="post" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title">
        <label for="title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="status" id="">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublish</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <label for="allowComments">
        <input type="checkbox" class="filled-in" checked="checked" name="allowComments" id="allowComments" />
        <span>Allow Comments</span>
      </label>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea name="body" id="addStory"></textarea>
      </div>
    </div>
    <input type="submit" value="Save" class="btn">
  </form>
</div>